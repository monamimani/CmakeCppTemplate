{
  "name": "CppDevContainer",
  "image": "ghcr.io/monamimani-builds/cpp-devcontainer:743ef66f2bfcb97aec1b2d72006af9e62d1fe26f",
  "runArgs": [
    "--name",
    "cpp-devcontainer",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.configureOnOpen": false,
        "editor.formatOnSave": true
      },
      "extensions": [
        "github.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "josetr.cmake-language-support-vscode"
      ]
    }
  },
  // "remoteUser": "vscode",
  "features": {},
  "postStartCommand": "chmod +x .devcontainer/gitconfig-identity.sh && .devcontainer/gitconfig-identity.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=delegated",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
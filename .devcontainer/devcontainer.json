{
  "name": "CppDevContainer",
  "image": "ghcr.io/monamimani-builds/cpp-devcontainer:2cadf5e7147ba128c3886ab47ab56d24700c39a5",
  "runArgs": [
    "--name",
    "cpp-devcontainer",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.configureOnOpen": false,
        "editor.formatOnSave": true
      },
      "extensions": [
        "github.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "josetr.cmake-language-support-vscode"
      ]
    }
  },
  "features": {
    //   "ghcr.io/devcontainers/features/git": {},
    //   "ghcr.io/devcontainers/features/git-lfs": {},
    //   "ghcr.io/devcontainers/features/powershell": {},
    //   "ghcr.io/devcontainers-community/features/llvm": {},
  },
  "postStartCommand": "chmod +x .devcontainer/gitconfig-identity.sh && .devcontainer/gitconfig-identity.sh"
}
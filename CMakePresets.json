{
  "$schema": "https://cmake.org/cmake/help/v3.28/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Preset-Name-Template",
      "description": "%Platform%-%Compiler%-%Generator%-[%OtherConfigOptions,...%]-%BuildType%-%BuildKind%",
      "hidden": true
    },
    {
      "name": "Dev",
      "hidden": true,
      "cacheVariables": {
        "BUILD_KIND": "Dev"
      }
    },
    {
      "name": "QA",
      "hidden": true,
      "cacheVariables": {
        "BUILD_KIND": "QA"
      }
    },
    {
      "name": "Profile",
      "hidden": true,
      "cacheVariables": {
        "BUILD_KIND": "Profile"
      }
    },
    {
      "name": "Shipping",
      "hidden": true,
      "cacheVariables": {
        "BUILD_KIND": "Shipping"
      }
    },
    {
      "name": "Common",
      "hidden": true,
      "binaryDir": "${sourceDir}/_Out/build/${presetName}",
      "installDir": "${sourceDir}/_Out/install/${presetName}",
      "warnings": {
        "uninitialized": false,
        "dev": false,
        "deprecated": false
      },
      "trace": {
        "mode": "on",
        "format": "human"
      },
      "cacheVariables": {}
    },
    {
      "name": "Windows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "TEMPLATE_PROJECT_ENABLE_CLANG_TIDY": "FALSE",
        "TEMPLATE_PROJECT_ENABLE_CPPCHECK": "FALSE"
      }
    },
    {
      "name": "Linux",
      "hidden": true,
      "cacheVariables": {},
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "Vs2022",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "NinjaMultiConfig",
      "hidden": true,
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "Ninja",
      "hidden": true,
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "Msvc",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/EHsc /MP",
        "CMAKE_C_FLAGS": "/EHsc /MP"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Clang-cl",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },
    {
      "name": "Clang",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
        // "VCPKG_VERBOSE": true,
        // "VCPKG_INSTALL_OPTIONS": "--clean-after-build;--binarysource=clear",
        // "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/Vcpkg/ChainloadToolchains/linux-clang.chainload.cmake",
        // "VCPKG_TARGET_TRIPLET": "x64-linux-clang-libcxx"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-clang-x64"
        }
      }
    },
    {
      "name": "Gcc",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "",
        "CMAKE_C_FLAGS": "",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    },
    {
      "name": "Linux-Clang-NinjaMultiConfig-Debug-Dev",
      "inherits": [
        "Common",
        "Linux",
        "Clang",
        "NinjaMultiConfig",
        "Dev"
      ],
      "cacheVariables": {
        // "CMAKE_BUILD_TYPE": "Debug" Commented because multiconfig generator don't use that CMake variable
      }
    },
    {
      "name": "Linux-Clang-Ninja-Debug-Dev",
      "inherits": [
        "Common",
        "Linux",
        "Clang",
        "Ninja",
        "Dev"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Linux-Clang-Ninja-Release-Dev",
      "inherits": [
        "Common",
        "Linux",
        "Clang",
        "Ninja",
        "Dev"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Linux-Clang-Ninja-Release-QA",
      "inherits": [
        "Common",
        "Linux",
        "Clang",
        "Ninja",
        "QA"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Linux-Clang-Ninja-Release-Shipping",
      "inherits": [
        "Common",
        "Linux",
        "Clang",
        "Ninja",
        "Shipping"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Windows-Msvc-Vs2022-Debug-Dev",
      "inherits": [
        "Common",
        "Windows",
        "Msvc",
        "Vs2022",
        "Dev"
      ],
      "cacheVariables": {}
    },
    {
      "name": "Windows-Msvc-Ninja-Debug-Dev",
      "inherits": [
        "Common",
        "Windows",
        "Msvc",
        "Ninja",
        "Dev"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Windows-Msvc-Ninja-Release-Dev",
      "inherits": [
        "Common",
        "Windows",
        "Msvc",
        "Ninja",
        "Dev"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Windows-Msvc-Ninja-Release-QA",
      "inherits": [
        "Common",
        "Windows",
        "Msvc",
        "Ninja",
        "QA"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Windows-Msvc-Ninja-Release-Shipping",
      "inherits": [
        "Common",
        "Windows",
        "Msvc",
        "Ninja",
        "Shipping"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Linux-Clang-NinjaMultiConfig-Debug-Dev",
      "configurePreset": "Linux-Clang-NinjaMultiConfig-Debug-Dev",
      "configuration": "Debug"
    },
    {
      "name": "Linux-Clang-Ninja-Debug-Dev",
